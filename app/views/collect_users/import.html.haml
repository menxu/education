- content_for :header do
  %h1 导入 CSV 文件

.page-mangae-collect-user-import
  .block.from
    .download
      .desc CSV Demo
      .desc= current_user.role

      %a.btn.info{:href => '/csv_demo/collect_users.csv'} 下载示例文件

    = form_tag  "/collect_users/import_from_csv", :method => :post, :multipart => true do 
      .desc 上传
      .input.file.required
        %label CSV
        = file_field_tag 'csv_file'
      %input.btn.success{:name => 'commit', :type => :submit, :value => '上传文件'}
      %a.btn.cancel{:href => '/collect_user'}= t('common.form.cancel')